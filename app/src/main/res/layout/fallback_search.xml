<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/im_search_fallback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_l"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_search_fallback" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dm_sans_regular"
        android:text="Search for a friend"
        android:textColor="@color/grey_600"
        app:layout_constraintEnd_toEndOf="@id/im_search_fallback"
        app:layout_constraintStart_toStartOf="@id/im_search_fallback"
        app:layout_constraintTop_toBottomOf="@id/im_search_fallback" />
</androidx.constraintlayout.widget.ConstraintLayout>