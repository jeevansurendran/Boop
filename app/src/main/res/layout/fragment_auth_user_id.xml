<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_auth"
    android:layout_height="match_parent"
    tools:context=".ui.auth.AuthUserIdFragment">

    <TextView
        android:id="@+id/tv_auth_user_id_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_i"
        android:fontFamily="@font/dm_sans_bold"
        android:text="Your unique user ID"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/til_auth_user_id"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/til_auth_user_id"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_auth_user_id"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_h"
        android:layout_marginEnd="@dimen/size_h"
        android:layout_marginTop="@dimen/size_eh"
        android:imeOptions="actionNext"
        android:hint="Enter an Unique User ID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_auth_user_id_user_id">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_auth_user_id_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_auth_user_id" />
</androidx.constraintlayout.widget.ConstraintLayout>