<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Instantaneous" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/grey_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorOnSecondary">@color/grey_400</item>
        <item name="colorSecondary">@color/grey_600</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/grey_400</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:fontFamily">@font/dm_sans_medium</item>
    </style>

    <style name="Theme.Instantaneous.NoActionBar" parent="Theme.Instantaneous">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Instantaneous.NoActionBar.FullScreen" parent="Theme.Instantaneous.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.Instantaneous.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Instantaneous.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- Auth Theme -->
    <style name="Theme.Auth" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/grey_400</item>
        <item name="colorOnPrimary">@color/blue</item>
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorOnSecondary">@color/grey_400</item>
        <item name="colorSecondary">@color/grey_600</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <!-- Other colors -->
        <item name="colorAccent">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- custom theme -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fontFamily">@font/dm_sans_medium</item>
    </style>

    <style name="RippleEffect" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:padding">0dp</item>
    </style>
</resources>